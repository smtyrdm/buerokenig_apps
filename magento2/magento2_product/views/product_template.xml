<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_template_property_form_magento" model="ir.ui.view">
            <field name="name">product.template.form.magento</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']" position="after">
                    <page name="magento" string="Magento">
                        <group>
                            <group string="Magento Admin Panel">
                                <field name="magento_product_id" invisible="1"/>
                                <button name="action_magento_product_admin" type="object" class="oe_stat_button" icon="fa-external-link"
                                        attrs="{'invisible': [('magento_product_id', '=', False)]}">Product Admin
                                </button>
                            </group>
                            <group string="Magento Store">
                                <field name="magento_url_key" invisible="1"/>
                                <button name="action_magento_product_store" type="object" class="oe_stat_button" icon="fa-external-link"
                                        attrs="{'invisible': [('magento_url_key', '=', False)]}">Product Store
                                </button>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>